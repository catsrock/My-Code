package day3;

import javax.swing.JOptionPane;

public class Personal {
public static void main(String[] args) {
	String alex=JOptionPane.showInputDialog("What is your bank account?");
	JOptionPane.showMessageDialog(null, "This is your bank account: "+alex);
	String billy=JOptionPane.showInputDialog("What is your email password? ");
	JOptionPane.showMessageDialog(null, "Now I have your password. "+billy);
	String joe=JOptionPane.showInputDialog("Where do you live?");
	JOptionPane.showMessageDialog(null, "You live here: "+joe);
	String greg=JOptionPane.showInputDialog("What is your full name, birthday, and hometown?");
	JOptionPane.showMessageDialog(null, "Hello, "+greg);
	
	
	
}
	
	
}

